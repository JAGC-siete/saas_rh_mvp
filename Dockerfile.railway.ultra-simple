# Ultra-simple Dockerfile with ZERO cache mounts
# For Railway BuildKit compatibility

FROM node:20-alpine
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with no cache
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Remove any tsbuildinfo files
RUN find . -name "*tsbuildinfo*" -delete 2>/dev/null || true

# Build the application
ENV NODE_ENV=production
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
