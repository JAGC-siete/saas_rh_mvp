# Supabase Configuration
# Get these from your Supabase project dashboard
# ⚠️ IMPORTANT: Use the NEW Supabase key format (sb_publishable_... and sb_secret_...)
NEXT_PUBLIC_SUPABASE_URL=https://XXXXX.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_YOUR_PUBLISHABLE_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=sb_secret_YOUR_SECRET_KEY_HERE

# Database Configuration  
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# JWT Secrets - Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_32_chars_minimum

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Payment Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_PLACEHOLDER_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_PLACEHOLDER_STRIPE_PUBLISHABLE_KEY
